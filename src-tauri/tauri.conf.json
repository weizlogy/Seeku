{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Seeku",
  "version": "0.1.0",
  "identifier": "com.weizlogy.seeku",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Seeku",
        "decorations": false,
        "width": 600,
        "height": 50,
        "minHeight": 58,
        "maxHeight": 58,
        "resizable": true,
        "skipTaskbar": true,
        "transparent": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "trayIcon": {
      "id": "seeku",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Seeku"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "powershell/search.ps1"
    ]
  }
}
